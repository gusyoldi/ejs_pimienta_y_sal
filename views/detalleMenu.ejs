<!DOCTYPE html>
<html>
  <head>
    <title>DetalleMenu</title>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/headerNavbar.ejs')  %>

    <!-- Header -->
    <%- include('./partials/headerMain.ejs') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= plato.titulo  %></h1>
          <br />
          <% if (plato.descripcionDetallada == '') { %>
            <h4>Plato TÃ­pico</h4>
            <% }else { %>
              <h4><%= plato.descripcionDetallada %></h4>
              <% } %>
         
          <p class="ps-text-grey">
           Precio: $<%= plato.precio %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= plato.img %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>
    </div>
  </body>
</html>
